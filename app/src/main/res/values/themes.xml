<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nmedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button">
        <item name="iconTint">@color/red</item>
        <item name="minWidth">@dimen/icon_button_min_size</item>
        <item name="minHeight">@dimen/icon_button_min_size</item>
        <item name="backgroundTint">@color/purple_100</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="elevation">@dimen/elevation</item>
        <item name="borderWidth">@dimen/zero_pd</item>
    </style>
    <style name="Widget.AppTheme.RepostButton" parent="Widget.AppTheme.LikeButton">
        <item name="iconTint">@color/purple_700</item>
    </style>
    <style name="Widget.AppTheme.MenuButton" parent="Widget.AppTheme.RepostButton">
        <item name="maxWidth">@dimen/icon_button_min_size</item>
    </style>
    <style name="Widget.AppTheme.FAButton" parent="Widget.AppTheme.RepostButton">
        <item name="backgroundTint">@color/teal_200</item>
    </style>

</resources>